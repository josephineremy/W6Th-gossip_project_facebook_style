<h2 class="h1-responsive font-weight-bold my-5 pl-5">Page de connexion</h2>
  <body>
   <div class=" border border-light p-5">
    <% if flash[:danger] %>
      <div class="alert alert-danger" role="alert"><%= flash[:danger] %></div>
    <% end %>
    <p class="h4 mb-4">Pour te connecter, compl√®te tes informations ci-dessous :</p>
      <%= form_tag url_for(action: 'create'), method: "post" do %>
        <p><%= label_tag 'E-mail :' %></p>
          <%= text_field_tag 'email', nil,  class: "form-control mb-2"%><br><br>
        <p><%= label_tag 'Mot de passe :' %></p>
          <%= text_field_tag 'password', nil,  class: "form-control mb-2"%><br>
        <div class="pull-right">
          <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-chevron-right"><p><%= submit_tag "Valider", class: "btn btn-info btn-block" %></p></span>
          </button>
          <button type="button" class="btn btn-default btn-lg">
            <span class="glyphicon glyphicon-chevron-right"><p><a href="<%= new_user_path %>" class="btn btn-success" >Par encore inscrit ? Clique ici !</a></p></span>
          </button>
        </div>
      <% end %>
    </div>
  </body>
