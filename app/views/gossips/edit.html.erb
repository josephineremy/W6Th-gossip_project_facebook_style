    <%= form_for @gossip do |f| %>
      <div class="form-group">
        <label>Titre du gossip</label>
        <%= f.text_field :title, class:'form-control' %>
      </div><br /> <br />
      <div class="form-group">
        <label>Contenu du gossip</label>
        <%= f.text_area :content, class:'form-control' %>
