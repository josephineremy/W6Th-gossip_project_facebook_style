    <div class="text-center py-5 px-4">
        <h2 class="card-title h1-responsive pt-3 mb-5 font-bold"><strong><%= @user.first_name %> <%= @user.last_name%></strong></h2>
    </div>
  </div>
</div><br><br>
    <p>
      <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
            aria-controls="pills-home" aria-selected="true">Infos personnelles</a>
