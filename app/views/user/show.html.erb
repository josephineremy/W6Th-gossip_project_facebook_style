      <div class="tab-content pt-5 pl-5" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
          <p> <strong>Pr√©nom:</strong> <%= @user.first_name %> <br>
          <strong>Nom:</strong> <%= @user.last_name%> <br>
          <strong>Email:</strong> <%= @user.email%><br>
          <strong>Age:</strong> <%= @user.age%><br>
          <strong>City:</strong> <%= @user.city.name%></p>
          <%= link_to "Plus d'informations sur la ville de #{@user.city.name}", city_path(@user.city.id) %>
        </div>
        <div class="tab-pane fade pr-5" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab"><p><strong>Description du gossip-nerd:</strong> <%= @user.description%></p></div>
          <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
            <p> <% @user.gossips.each do |gossip| %>
              <h4><%= gossip.title %></h4>
              <p><%= gossip.content %><br><br>
                <% if current_user%>
                <%= button_to 'like', gossip_likeys_path(gossip), method: :post, class:"btn btn-outline-info btn-sm" %>
                  <p class="p-2"> <%= gossip.likeys.count %> <i class="fas fa-heart"></i></p>
                <%end%>
              <%= link_to "Voir le potin", gossip_path(gossip.id) %><br><br>
            <% end%></p>
          </div>
